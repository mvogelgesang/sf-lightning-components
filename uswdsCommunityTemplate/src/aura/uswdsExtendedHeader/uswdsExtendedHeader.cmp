<aura:component implements="forceCommunity:availableForAllPageTypes" access="global" >
    <ltng:require styles="{!$Resource.uswds_v_2_7+'/uswds-2.7.0/css/uswds.min.css'}" />
    <ltng:require scripts="{!$Resource.uswds_v_2_7+'/uswds-2.7.0/js/uswds.min.js'}" />
    
    <aura:attribute name="siteName" type="String" default=""/>
    <aura:attribute name="primaryNavigationLinkSetId" type="String" default=""/>
    <aura:attribute name="secondaryNavigationLinkSetId" type="String" default="" />
    
	<div class="usa-overlay"></div>
        <header class="usa-header usa-header--extended">
            <div class="usa-navbar">
          <div class="usa-logo" id="extended-logo">
            <em class="usa-logo__text">
                <div class="slds-media slds-media_center">
                    <div class="slds-media__figure">
                      <span class="slds-avatar slds-avatar_large logoContainer">
                        <img class="logoContainer" alt="Person name" src="" title="Home" />
                      </span>
                    </div>
                    <div class="slds-media__body">
                        <a href="/" title="Home" aria-label="Home">
                            {!v.siteName}
                        </a>
                    </div>
                </div>
              </em>
          </div>
      <button class="usa-menu-btn">Menu</button>
    </div>
    <c:uswdsMegaMenu navigationLinkSetId="{!v.primaryNavigationLinkSetId}" secondaryNavigationLinkSetId="{!v.secondaryNavigationLinkSetId}"></c:uswdsMegaMenu>
</header>
</aura:component>